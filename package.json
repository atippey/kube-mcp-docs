{
  "name": "kubemcp-docs",
  "version": "0.1.0",
  "private": true,
  "license": "CC-BY-4.0",
  "description": "Documentation site for the kubemcp.io Kubernetes operator",
  "type": "module",
  "scripts": {
    "dev": "npm run generate:schemas && astro dev",
    "build": "npm run generate:schemas && astro build && node scripts/create-sitemap-alias.mjs",
    "preview": "astro preview",
    "generate:schemas": "tsx scripts/generate-schema-docs.ts",
    "check:schemas": "npm run generate:schemas && git diff --exit-code -- src/content/docs/reference",
    "validate:tag": "node scripts/validate-tag.mjs",
    "hooks:install": "git config core.hooksPath .githooks",
    "lint": "biome ci .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "@astrojs/sitemap": "3.7.0",
    "@astrojs/starlight": "^0.37.6",
    "astro": "^5.17.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4"
  }
}
